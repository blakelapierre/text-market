tax { @id, insert_at timestamp } {
  income {
    transaction { }
      -> item
      -> tax (tax_amount)
      -> income (income_amount)
      -> info?

    info {
      text text
    }

    item {
      description text
    }

    tax {
      amount bigint
    }

    income {
      amount bigint
    }

    expense {
      amount bigint
    } -> item

    deduction {
      amount bigint
    } -> tax
      -> expense

    translation {
      tax_amount bigint,
      cash_amount bigint
    }
      -> tax
      -> exchange_transaction

    exchange { name text }

    exchange_transaction {
      exchange_transaction_id text
    }
      -> exchange
  }
}